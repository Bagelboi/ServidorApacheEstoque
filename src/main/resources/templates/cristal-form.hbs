<h1>{{buttonText}}</h1>

<form action="{{action}}" method="{{method}}">
    <label for="sku">SKU:</label>
    <input type="text" id="sku" name="sku" value="{{cristal.sku}}" {{#if cristal}}readonly{{/if}} required>
    <br>

    <label for="ean">EAN:</label>
    <input type="text" id="ean" name="ean" value="{{cristal.ean}}" required>
    <br>

    <label for="titulo">Título:</label>
    <input type="text" id="titulo" name="titulo" value="{{cristal.titulo}}" required>
    <br>

    <label for="estoque">Estoque:</label>
    <input type="number" id="estoque" name="estoque" value="{{cristal.estoque}}" min="0" {{#if cristal}}readonly{{/if}}>
    <br>

    <label for="cor">Cor:</label>
    <input type="text" id="cor" name="cor" value="{{cristal.cor}}">
    <br>

    <label for="tamanho">Tamanho:</label>
    <input type="text" id="tamanho" name="tamanho" value="{{cristal.tamanho}}">
    <br>

        <label for="peso">Peso:</label>
        <input type="text" id="peso" name="peso" value="{{cristal.peso}}">
        <br>

    <label for="descricao">Descrição:</label>
    <textarea id="descricao" name="descricao">{{cristal.descricao}}</textarea>
    <br>

    <button type="submit">{{buttonText}}</button>
</form>

<a href="/cristais">Voltar à lista</a>
